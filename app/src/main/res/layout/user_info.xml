<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/golden_cardview_border"
            android:orientation="vertical">

            <!--<com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/interior_image"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="5"
                app:iss_delay="5"
                android:contentDescription="@string/Interior"
                app:iss_error_image="@drawable/error"
                app:iss_period="2100"
                app:iss_placeholder="@drawable/final_logo"
                app:iss_selected_dot="@drawable/default_selected_dot"
                app:iss_unselected_dot="@drawable/default_unselected_dot" />
-->
            <ImageView
                android:id="@+id/interior_image"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/Interior"
                android:padding="5dp"
                android:src="@drawable/final_logo" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/golden" />

            <TextView
                android:id="@+id/interior_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/helveticaneue"
                android:gravity="center"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/golden"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/interior_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/helveticaneue"
                        android:gravity="center"
                        android:maxLength="300"
                        android:maxLines="4"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">


                    <Button
                        android:id="@+id/interior_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_price"
                        android:fontFamily="@font/parnas"
                        android:text="@string/call"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/book_interior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/interior_call"
                        android:background="@drawable/button_book"
                        android:fontFamily="@font/parnas"
                        android:text="@string/share"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>